<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="de.diedavids.cuba.ceuesr.web.comment">
    <data>
        <instance id="commentDc"
                  class="de.diedavids.cuba.ceuesr.entity.Comment"
                  view="_local">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="commentDc">
            <column width="250px">
                <textField id="textField" property="text"/>
                <textField id="usernameField" property="username"/>

                <!--

                value source is used here
                -->
                <pickerField id="commentsField"
                             property="comments"
                >
                    <actions>
                        <action id="lookup" type="entitySoftReferencePicker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
